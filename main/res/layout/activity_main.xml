<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rynel.carlistrecycler.MainActivity">

    <EditText
        android:id="@+id/addCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_car_type" />

    <EditText
        android:id="@+id/addCarModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_car_model" />

    <EditText
        android:id="@+id/addCarYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_car_year" />

    <Button
        android:onClick="addCar"
        android:id="@+id/addCarToList"
        android:text="@string/save_to_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/frameRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rvCarList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
