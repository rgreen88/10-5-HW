<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rynel.carlistrecycler.MainActivity">

    <fragment
        android:id="@+id/fAddCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.rynel.carlistrecycler.AddCarFragment" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <fragment
        android:id="@+id/fCarList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.rynel.carlistrecycler.CarListFragment" />

</LinearLayout>